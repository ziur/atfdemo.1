<h1>Listing communications</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Value</th>
      <th>Default</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @communications.each do |communication| %>
      <tr>
        <td><%= communication.type %></td>
        <td><%= communication.value %></td>
        <td><%= communication.default %></td>
        <td><%= communication.contact %></td>
        <td><%= link_to 'Show', communication %></td>
        <td><%= link_to 'Edit', edit_communication_path(communication) %></td>
        <td><%= link_to 'Destroy', communication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Communication', new_communication_path %>
